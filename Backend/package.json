{
  "name": "jungle-planet-zoo-management",
  "version": "1.0.0",
  "description": "Backend robusto, seguro y listo para producción para el sistema de gestión del zoológico 'Jungle Planet'",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "docs": "node -e \"console.log('📚 Documentación disponible en:'); console.log('- README: ./docs/README.md'); console.log('- Docs técnicas: ./docs/DOCUMENTACION_BACKEND.md'); console.log('- API Docs: http://localhost:3000/api-docs');\"",
    "migrate": "node ./migrations/run.js",
    "install:setup": "node install.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run test",
    "build": "echo 'No build step required for Node.js backend'"
  },
  "keywords": [
    "zoo",
    "management",
    "nodejs",
    "express",
    "supabase",
    "postgresql",
    "rest-api",
    "dashboard",
    "realtime",
    "websocket"
  ],
  "author": "Sistema de Gestión Jungle Planet",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "bcrypt": "^5.1.0",
    "chart.js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.6.0",
    "express-status-monitor": "^1.3.4",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.1.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/jungle-planet-zoo"
  }
}
